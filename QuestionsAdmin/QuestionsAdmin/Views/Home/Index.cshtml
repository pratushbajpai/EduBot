@model Questions
@{
    ViewData["Title"] = "Questions Admin Page";
}

<div class="text-center">
    <h1 class="display-4">Welcome</h1>
    <p>Quiz questions from Education Quiz Bot</p>
</div>

<p>
    <a asp-action="Add">Create New</a> | <a asp-action="Save">Submit Changes</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                Id
            </th>
            <th>
                Chapter
            </th>
            <th>
                Prompt
            </th>
            <th>
                Options
            </th>
            <th>
                Answer
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (Question item in Model.QuestionsList)
        {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Chapter)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Prompt)
            </td>
            <td>
                <ul>
                    @foreach (String option in item.Options)
                    {
                        <li>@option</li>
                    }
                </ul>
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AnswerIndex)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.Id })
            </td>
        </tr>
            }
        </tbody>
</table>
